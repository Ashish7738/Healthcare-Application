<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegister.RegisterActivity"
    android:background="@drawable/splash_back"
    android:id="@+id/background"
    android:transitionName="background">

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/akaya_telivigala"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text=" HealthCare App "
        android:textAlignment="center"
        android:textColor="#E6F4FE"
        android:textSize="60sp"
        android:textStyle="bold"
        android:transitionName="logo_text"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp"
        android:transitionName="cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:layout_editor_absoluteX="30dp">

            <TextView
                android:id="@+id/reg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:transitionName="head"/>

            <EditText
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/line_layout"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:inputType="text"
                android:maxLength="20"
                android:padding="14dp"
                android:textColor="@color/grey"
                android:transitionName="username" />

            <EditText
                android:id="@+id/reg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Phone Number"
                android:textColor="@color/grey"
                android:inputType="phone"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:background="@drawable/line_layout"
                android:drawablePadding="8dp"
                android:maxLength="10"
                android:padding="14dp" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                android:textColor="@color/grey"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawableRight="@drawable/baseline_visibility_off_24"
                android:background="@drawable/line_layout"
                android:drawablePadding="8dp"
                android:maxLength="20"
                android:padding="14dp"
                android:transitionName="password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password must contains Capital letter, Number and Special character"
                android:textColor="@color/grey"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/reg_cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Confirm Password"
                app:passwordToggleEnabled="true"
                android:textColor="@color/grey"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawableRight="@drawable/baseline_visibility_off_24"
                android:background="@drawable/line_layout"
                android:drawablePadding="8dp"
                android:maxLength="20"
                android:padding="14dp"/>

            <Button
                android:id="@+id/reg_bttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/login_back"
                android:backgroundTint="@color/blue"
                android:padding="8dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:transitionName="button"
                android:visibility="visible" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Registered? Login here"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:layout_editor_absoluteX="64dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:transitionName="tab"/>

</androidx.constraintlayout.widget.ConstraintLayout>